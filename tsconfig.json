{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "lib": ["es2018"],
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "jsx": "react",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
