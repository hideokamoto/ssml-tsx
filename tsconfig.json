{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "pretty": true,
    "newLine": "lf",
    "outDir": "dist",
    "jsx": "react",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "./src/**/__tests__"]
}
